global_defs {
<% if @notification_email && @notification_email_from && @smtp_server && @smtp_connect_timeout -%>
  notification_email {
  <% @notification_email.each do |email| -%>
    <%= email %>
  <% end -%>}
  notification_email_from <%= @notification_email_from %>
  smtp_server <%= @smtp_server %>
  smtp_connect_timeout <%= @smtp_connect_timeout %>
<% end -%>
  router_id <%= @router_id %>
}

